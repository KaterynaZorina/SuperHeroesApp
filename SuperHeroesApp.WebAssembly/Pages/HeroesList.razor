        <div class="col-md-4">
            <div class="card mb-4 box-shadow" style="height: 19rem;">
                <div class="card-body">
                    <button type="button" class="btn btn-sm btn-outline-secondary" @onclick="@NavigateToCreateHeroComponent">
                        <span class="oi oi-plus" aria-hidden="true"></span>
                        Create hero
                    </button>
                </div>
            </div>
        </div>
    </AddHeroItem>
</SuperHeroesList>

